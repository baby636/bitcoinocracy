.card.text-center
  h3 #{bch_human(bitcoin_value)} #{percent_human(percentage)} #{word}
  .content
    .section
      .table-container
        table class="table borderless"
          - signatures.ordered_by_value.each do |s|
            tr.actions-on-hover
              td
                p.bitcoin-address= link_to s.bitcoin_address, address_path(s.bitcoin_address)
              td
                p.inline= bch_human(s.bitcoin_address.balance)
                span.actions
                  span.icon.icon-info-circled.tooltipster title="Signature: <div class='breakable'>#{s}</div>" data-tooltipster='{"interactive":true, "maxWidth": 250, "contentAsHTML": true}'
